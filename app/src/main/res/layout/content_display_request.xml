<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DisplayRequestActivity"
    tools:showIn="@layout/activity_display_request">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:id="@+id/topLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:weightSum="3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Machine Information" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/middleLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="3dp"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/workRequestFields"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:gravity="start"
                android:orientation="horizontal"
                android:padding="3dp"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

                <LinearLayout
                    android:id="@+id/workRequestFieldsLabels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="vertical"
                    android:padding="3dp"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin">

                    <LinearLayout
                        android:id="@+id/linearLayoutDisplayRequestRequestID"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:paddingTop="@dimen/activity_vertical_margin"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:text="Request ID"
                            android:layout_weight="1" />

                        <ViewSwitcher
                            android:id="@+id/viewSwitcherRequestID"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:measureAllChildren="false"
                            android:layout_weight="1"
                            android:padding="0dp">
                            <EditText
                                android:layout_gravity="right"
                                android:id="@+id/editTextRequestID"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:layout_width="match_parent"/>
                            <TextView
                                android:id="@+id/textViewRequestID"
                                android:layout_height="wrap_content"
                                android:padding="3dp"
                                android:text="Request ID"
                                android:layout_weight="2"
                                android:layout_gravity="right"
                                android:layout_width="match_parent"/>
                        </ViewSwitcher>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:paddingTop="@dimen/activity_vertical_margin"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:text="Date Created"
                            android:layout_weight="1"
                            android:width="0dp" />


                        <ViewSwitcher
                            android:id="@+id/viewSwitcherDateCreated"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:measureAllChildren="false"
                            android:layout_weight="1"
                            android:padding="0dp">
                            <EditText
                                android:layout_gravity="right"
                                android:id="@+id/editTextDateCreated"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:width="0dp" />
                            <TextView
                                android:id="@+id/textViewDateCreated"
                                android:layout_height="wrap_content"
                                android:padding="3dp"
                                android:text="DateCreated"
                                android:layout_weight="2"
                                android:layout_gravity="right"
                                android:layout_width="match_parent"/>
                        </ViewSwitcher>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:paddingTop="@dimen/activity_vertical_margin"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:text="Created By"
                            android:layout_weight="1" />

                        <ViewSwitcher
                            android:id="@+id/viewSwitcherCreatedBy"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:measureAllChildren="false"
                            android:layout_weight="1"
                            android:padding="0dp">
                            <EditText
                                android:layout_gravity="right"
                                android:id="@+id/editTextCreatedBy"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:layout_width="match_parent"/>
                            <TextView
                                android:id="@+id/textViewCreatedBy"
                                android:layout_height="wrap_content"
                                android:padding="3dp"
                                android:text="Request ID"
                                android:layout_weight="2"
                                android:layout_gravity="right"
                                android:layout_width="match_parent"/>
                        </ViewSwitcher>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:paddingTop="@dimen/activity_vertical_margin"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:text="Progress"
                            android:layout_weight="1" />

                        <ViewSwitcher
                            android:id="@+id/viewSwitcherProgress"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:measureAllChildren="false"
                            android:layout_weight="1"
                            android:padding="0dp">
                            <EditText
                                android:layout_gravity="right"
                                android:id="@+id/editTextProgress"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:layout_width="match_parent"/>
                            <TextView
                                android:id="@+id/textViewProgress"
                                android:layout_height="wrap_content"
                                android:padding="3dp"
                                android:text="Request ID"
                                android:layout_weight="2"
                                android:layout_gravity="right"
                                android:layout_width="match_parent"/>
                        </ViewSwitcher>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:paddingTop="@dimen/activity_vertical_margin"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:text="Title"
                            android:layout_weight="1" />
                        <ViewSwitcher
                            android:id="@+id/viewSwitcherTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:measureAllChildren="false"
                            android:layout_weight="1"
                            android:padding="0dp">
                            <EditText
                                android:layout_gravity="right"
                                android:id="@+id/editTextTitle"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:layout_width="match_parent"/>
                            <TextView
                                android:id="@+id/textViewTitle"
                                android:layout_height="wrap_content"
                                android:padding="3dp"
                                android:text="Request ID"
                                android:layout_weight="2"
                                android:layout_gravity="right"
                                android:layout_width="match_parent"/>
                        </ViewSwitcher>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:paddingTop="@dimen/activity_vertical_margin"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="3dp"
                            android:text="Request For" />

                        <ViewSwitcher
                            android:id="@+id/viewSwitcherRequestFor"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:measureAllChildren="false"
                            android:layout_weight="1"
                            android:padding="0dp">
                            <Spinner
                                android:id="@+id/spinnerDisplayRequestRequestFor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="2"/>
                            <TextView
                                android:id="@+id/textViewRequestFor"
                                android:layout_height="wrap_content"
                                android:padding="3dp"
                                android:text="Request ID"
                                android:layout_weight="2"
                                android:layout_gravity="right"
                                android:layout_width="match_parent"/>
                        </ViewSwitcher>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:paddingTop="@dimen/activity_vertical_margin"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="3dp"
                            android:text="Status" />

                        <ViewSwitcher
                            android:id="@+id/viewSwitcherStatus"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:measureAllChildren="false"
                            android:layout_weight="1"
                            android:padding="0dp">
                            <EditText
                                android:layout_gravity="right"
                                android:id="@+id/editTextStatus"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:layout_width="match_parent"/>
                            <TextView
                                android:id="@+id/textViewStatus"
                                android:layout_height="wrap_content"
                                android:padding="3dp"
                                android:text="Request ID"
                                android:layout_weight="2"
                                android:layout_gravity="right"
                                android:layout_width="match_parent"/>
                        </ViewSwitcher>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:paddingTop="@dimen/activity_vertical_margin"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="3dp"
                            android:text="Priority" />

                        <ViewSwitcher
                            android:id="@+id/viewSwitcherPriority"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:measureAllChildren="false"
                            android:layout_weight="1"
                            android:padding="0dp">
                            <EditText
                                android:layout_gravity="right"
                                android:id="@+id/editTextPriority"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:layout_width="match_parent"/>
                            <TextView
                                android:id="@+id/textViewPriority"
                                android:layout_height="wrap_content"
                                android:padding="3dp"
                                android:text="Request ID"
                                android:layout_weight="2"
                                android:layout_gravity="right"
                                android:layout_width="match_parent"/>
                        </ViewSwitcher>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:paddingTop="@dimen/activity_vertical_margin"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="3dp"
                            android:text="Date Machine is Required"
                            android:layout_gravity="left"
                            android:ellipsize="none"
                            android:maxLines="5"
                            android:scrollHorizontally="false"/>

                        <ViewSwitcher
                            android:id="@+id/viewSwitcherMachineIsRequired"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:measureAllChildren="false"
                            android:layout_weight="1"
                            android:padding="0dp">
                            <EditText
                                android:layout_gravity="right"
                                android:id="@+id/editTextMachineIsRequired"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:layout_width="match_parent"/>
                            <TextView
                                android:id="@+id/textViewMachineIsRequired"
                                android:layout_height="wrap_content"
                                android:padding="3dp"
                                android:text="Request ID"
                                android:layout_weight="2"
                                android:layout_gravity="right"
                                android:layout_width="match_parent"/>
                        </ViewSwitcher>


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/descriptionRequestLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:weightSum="1"
                android:layout_gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Description of Request:" />

                <EditText
                    android:id="@+id/editTextDescriptionOfRequest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.20"
                    android:ems="10"
                    android:inputType="textMultiLine" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomLine"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:weightSum="3">

            <Button
                android:id="@+id/buttonDisplayRequestCreateMaintenanceLog"
                android:layout_width="218dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="onClickCreateMaintenanceLog"
                android:text="Create Maintenance Log" />
            <Button
                android:id="@+id/buttonDisplayRequestCreateRequest"
                android:layout_width="218dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="onClickCreateRequestActivityCreateRequest"
                android:text="Save (New)" />
            <Button
                android:id="@+id/buttonDisplayRequestSaveEditedRequest"
                android:layout_width="218dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="onClickCreateRequestActivitySaveEditedRequest"
                android:text="Save (Edit)" />

            <Button
                android:id="@+id/buttonDisplayRequestEditRequest"
                android:layout_width="218dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="onClickCreateRequestActivityBeginEditRequest"
                android:text="Edit" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>